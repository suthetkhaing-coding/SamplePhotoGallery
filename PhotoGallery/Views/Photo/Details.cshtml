@model PhotoGallery.Models.PhotoModel

@{
    Layout = "_AdminLteLayout";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
              @if (Model.Image != null && Model.Image.Length > 0)
               {
                  <img class="img-fluid rounded-start" style="height:300px" src="data:image/png;base64,@(Convert.ToBase64String(Model.Image))" />
               }
         </div>
         <div class ="col-md-6">
             <div class="card-body">
                <div>
                    <h5>Caption</h5>
                    <p>@Model.Title</p>
                </div>

                <div>
                    <h5>Uploaded On</h5>
                    <p>@Model.UploadedDate.ToShortDateString()</p>
                </div>

                <div>
                    <h5>Description</h5>
                    <p>@Model.Description</p>
                </div>

                <div>
                    <h5>Location</h5>
                    <p>@Model.Location</p>
                </div>

                <div>
                    <h5>Category</h5>
                    <p>@Model.Category</p>
                </div>
            </div>
         </div>
    </div>
    <div class="m-3">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>
